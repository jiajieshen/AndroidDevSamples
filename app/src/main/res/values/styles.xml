<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TranslucentNavigation" parent="AppTheme" />

    <style name="CategoryItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/col_f0f0f0</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/col_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColorAccentRaisedButton">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="WhiteRaisedButton">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/col_f8e058</item>
    </style>

    <style name="DarkUI" parent="AppTheme">
        <item name="colorControlNormal">@color/col_999999</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ColoredUI" parent="AppTheme">
        <item name="colorControlNormal">@color/col_666666</item>
        <item name="colorControlActivated">@color/col_f8e058</item>
    </style>

    <style name="ColoredSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/col_f8e058</item>
        <item name="colorSwitchThumbNormal">@color/col_666666</item>
        <item name="android:colorForeground">@color/col_999999</item>
    </style>

</resources>
